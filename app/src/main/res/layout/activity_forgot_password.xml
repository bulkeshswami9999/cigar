<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity"
    android:background="@color/black"
    android:padding="20sp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="70dp"
        android:id="@+id/imageicon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/piersoniconone"
        android:layout_centerHorizontal="true" />


    <TextView
        android:textSize="16sp"
        android:id="@+id/text1"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:background="@color/black"
        android:layout_below="@id/imageicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pierson Geoffreys"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@id/text2"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:background="@color/black"
        android:layout_below="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="12sp"
        android:text="Cigars- If we wouldn't smoke it, we don't sell it."
        android:layout_centerInParent="true" />

    <androidx.appcompat.widget.AppCompatEditText
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:drawablePadding="5dp"
        android:id="@+id/enteremail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text2"
        android:hint="Enter registered email"
        android:background="@drawable/edit_round"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:paddingStart="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:textSize="18sp"
        android:padding="7dp"
        android:id="@+id/reset"
        android:layout_marginTop="50dp"
        android:layout_below="@id/enteremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD"
        android:onClick="pass"
        android:background="@drawable/corner_rounded"/>



</RelativeLayout>