<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gen_black"
    tools:context=".activities.BecomePartner">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageicon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/piersoniconone"
        android:layout_centerHorizontal="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="16sp"
        android:id="@+id/text1"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:background="@color/black"
        android:layout_below="@id/imageicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CigarDash"
        android:layout_centerInParent="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/text2"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:background="@color/black"
        android:layout_below="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Cigars- If we wouldn't smoke it, we don't sell it."
        android:layout_centerInParent="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:textColor="@color/gen_white"
        android:textSize="12sp"
        android:id="@+id/text3"
        android:textStyle="italic"
        android:text="The World First Cigar Delivery App"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp">
        <androidx.appcompat.widget.AppCompatEditText
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Full Name"
            android:paddingLeft="10dp"
            android:drawablePadding="5dp"
            android:background="@drawable/edit_round"
            android:layout_centerInParent="true"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Email"
            android:drawablePadding="5dp"
            android:id="@+id/email"
            android:background="@drawable/edit_round"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/mobileNumber"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:textSize="16sp"
            android:inputType="number"
            android:background="@drawable/edit_round"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="DOB"
            android:id="@+id/dob"
            android:background="@drawable/edit_round"
            android:textSize="16sp"
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp" />
        <androidx.appcompat.widget.AppCompatEditText
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawablePadding="5dp"
            android:id="@+id/password"
            android:background="@drawable/edit_round"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:paddingLeft="15dp"
            android:hint="Re Enter Password"
            android:inputType="textPassword"
            android:drawablePadding="5dp"
            android:id="@+id/password1"
            android:background="@drawable/edit_round"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
        <!--<androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/license"
            android:hint="Driving license Number"
            android:background="@drawable/edit_round"
            android:layout_marginTop="20dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"/>-->
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_address"
            android:paddingLeft="15dp"
            android:hint="Address"
            android:id="@+id/address"
            android:background="@drawable/edit_round"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/city"
            android:hint="City"
            android:background="@drawable/edit_round"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/state"
            android:hint="@string/state"
            android:background="@drawable/edit_round"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/pincode"
            android:hint="@string/pincode"
            android:background="@drawable/edit_round"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textSize="18sp"
            android:background="@drawable/corner_rounded"/>
    </LinearLayout>
</RelativeLayout>
